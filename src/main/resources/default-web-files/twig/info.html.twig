{% if error is defined %}
<div class="card" style="margin-top: 40px;background: #7c211e;border-radius: 0px;">
  <div class="card-body" style="padding-bottom: 0px;padding-top: 15px;">
    <p><i class="fa fa-warning"></i>&nbsp; {{ error }}</p>
  </div>
</div>
{% elseif warning is defined %}
<div class="card" style="margin-top: 40px;background: #a53f0f;border-radius: 0px;">
  <div class="card-body" style="padding-bottom: 0px;padding-top: 15px;">
    <p><i class="fa fa-warning"></i>&nbsp; {{ warning }}<br></p>
  </div>
</div>
{% endif %}